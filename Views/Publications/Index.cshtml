@model IEnumerable<plateforme.Models.Publication>
@{
    ViewData["Title"] = "Voir les publications";
    Layout = "_LayoutMembre";
    string photo = ViewBag.photo;
    
}
<div class="row g-3">
    <div class="card bg-transparent border-0">
            
      <div class="col-lg-12">
         <div class="bg-mode p-1 mx-auto row g-4 mt-1" >
            <!-- Nav Search START -->
            <div class="nav mt-3 mt-lg-0 flex-nowrap align-items-center px-4 px-lg-0 col-lg-6" >
              <div class="nav-item w-100">
                <form class="rounded position-relative pull-right" asp-action="Index" asp-controller="Publications" style="width : 60vh">
                  <input class="form-control ps-5 bg-light" type="search" name="search" placeholder="Rechercher..." aria-label="Search">
                  <button class="btn bg-transparent px-2 py-0 position-absolute top-50 start-0 translate-middle-y" type="submit"><i class="bi bi-search fs-5"> </i></button>
                </form>
              </div>
            </div>
            <!-- Nav Search END -->
             <div class="nav mt-3 mt-lg-0 flex-nowrap align-items-center px-4 px-lg-0 col-lg-3" >
               <a class="dropdown-item signal" asp-action="MesContenus" asp-controller="Contenus"><i class="bi bi-chat-square-fill fa-fw me-2 signalIcon"></i>  <span class="signalText">Mes contenus</span></a>
            </div>

             <div class="nav mt-3 mt-lg-0 flex-nowrap align-items-center px-4 px-lg-0 col-lg-3" >
               <a class="dropdown-item signal" asp-action="Create" asp-controller="Publications"><i class="bi bi-plus fa-fw me-2 fs-2 signalIcon">  </i><span class="signalText">Ajouter</span></a>
            </div>
        </div>
      </div>
    </div>

    @*<div class="col-lg-12 text-end bg-transparent pull-right">
         <!-- Nav Search START -->
        <div class="nav mt-3 mt-lg-0 flex-nowrap align-items-center px-4 px-lg-0" >
          <div class="nav-item w-100">
            <form class="rounded position-relative pull-right" asp-action="Index" asp-controller="Publications" style="width : 60vh">
              <input class="form-control ps-5 bg-light" type="search" name="search" placeholder="Rechercher..." aria-label="Search">
              <button class="btn bg-transparent px-2 py-0 position-absolute top-50 start-0 translate-middle-y" type="submit"><i class="bi bi-search fs-5"> </i></button>
