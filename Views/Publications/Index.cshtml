        </div>
        <!-- Nav Search END -->
    </div>*@
      <!-- Sidenav START -->
      <div class="col-lg-3">
        <!-- Card follow START -->
        <div class="col-sm-6 col-lg-12">
          @if(Model.Where(p => p.Type == "event").Count() > 0)
          {
                
            <div class="card"  style="height: 85vh; overflow: scroll;">
                <!-- Card header START -->
                <div class="card-header pb-0 border-0">
                  <h5 class="card-title mb-0 text-center">Les derniers évènements publiés</h5>
                </div>
                <!-- Card header END -->
                <!-- Card body START -->
                <div class="card-body">

                        @foreach (var item in Model.Where(n => n.Type == "event").ToList())
                  {
                        <div class="col-lg-12 bg-light w-50 popup p-5" id="item_@item.Id">
                            <div class="row g-4">
                                <p>
                                    Confirmer le retrait de la publication <b>@item.Titre</b>
                                </p>
                                <div class="col-lg-12 row">
                                    <div class="col-6"><a class="btn btn-sm btn-danger-soft mb-0" onclick="toggle('item_@item.Id')">Retour</a> </div>
                                    <div class="col-6 text-end"><a class="btn btn-sm btn-success-soft mb-0" asp-action="Supprime" asp-controller="Contenus" asp-route-id="@item.Id">Supprimer</a></div>
                                </div>
                            </div>
                        </div>
                       
                                <div class="row">
                                    <h6 class="mb-0 col-10">@Html.DisplayFor(modelItem => item.Titre)</h6>
                                    <div class="dropdown text-end col-2">
                                        <a href="#" class="text-secondary btn btn-secondary-soft-hover py-1 px-2" id="cardFeedAction" data-bs-toggle="dropdown" aria-expanded="false">
                                            <i class="bi bi-three-dots-vertical"></i>
                                        </a>
                                        <!-- Card signal action  -->
                                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="cardFeedAction">
                                            @if (item.Signals.Where(p => p.MembreId == ViewBag.membre.Id).Count() == 0)
                                            {
                                                <li>
                                                    <a class="dropdown-item signal" asp-route-id="@item.Id" asp-action="Signaler" asp-controller="Membres">
                                                        <i class="bi bi-exclamation-triangle-fill signalIcon text-warning"></i> <span class="signalText">Signaler</span>
                                                    </a>
                                                </li>
                                            }

                                            <!-- Card retirer action -->
                                            @if (ViewBag.membre.Profil == "moderateur" || ViewBag.membre.Profil == "superadmin")
                                            {
                                                <li>
                                                    <a href="#" class="dropdown-item signal" onclick="toggle('item_@item.Id')">
                                                        <i class="bi bi-trash-fill signalIcon text-danger"></i><span class="signalText">Retirer</span>
                                                    </a>
                                                    
                                                </li>

                                                <!-- Card Avertir action -->
                                                <li>
                                                    <a class="dropdown-item signal" asp-route-id="@item.MembreId" target="_blank" asp-action="Avertir" asp-controller="Moderateurs">
                                                        <i class="bi bi-hand-thumbs-down-fill signalIcon text-primary"></i><span class="signalText">Avertir</span>
                                                    </a>
                                                </li>
                                            }

                                        </ul>
                                    </div>
                                </div>
                                
                                    @if (item.Description.Length > 101)
                                    {
                                        <p>
                                            <a class="text-body" asp-action="Details" asp-route-id="@item.Id">
                                                @Html.Raw(item.Description.Substring(0,100))...
                                                Voir plus
                                            </a>
                                        </p>
                                    }
                                    else
                                    {
                                        <p>
                                            <a class="text-body" title="consulter" asp-action="Details" asp-route-id="@item.Id">
                                                @Html.Raw(item.Description)
                                            </a>
                                        </p>
                                    }
                                    <div class="row">
                                      <div class="col-12"><small class="fw-bold">Début:    <i class="bi bi-calendar-day"></i> @DateFormat.AffichageDate( item.DateDeb)</small></div>
                                      <div class="col-12"><small class="fw-bold">Fin:      <i class="bi bi-calendar-day"></i> @DateFormat.AffichageDate(item.DateFin)</small></div>
                                      <div class="col-12">
                                      <small class="fw-bold">  
                                          <i class="bi bi-person-fill"></i> 
                                        @if(item.Membre.Mail == ViewBag.membre.Mail)
                                        {
                                            <span class="nav-item card-title mb-0">Moi</span>
                                        }
                                        else if(item.Membre.Etat == "supprime")
                                        {
                                            <span>Compte supprimé</span>
                                        }
                                        else
                                        {
                                            <span class="nav-item card-title mb-0">@Html.DisplayFor(modelItem => item.Membre.Nom) @Html.DisplayFor(modelItem => item.Membre.Prenom)</span>
                                        }
                                   
                                      </small></div>
                      
                                    </div>
                            
                                <hr>
                            
                  
                  }
              
                  <!-- View more button -->
                  @*<div class="d-grid mt-3">
                    <a class="btn btn-sm btn-primary-soft" href="#!">View more</a>
                  </div>*@
                </div>
                <!-- Card body END -->
            </div>
          }
          else
          {
              <div class="text-center"  style="height: 85vh;">
                <div class="my-sm-2 py-sm-2">
                  <i class="display-1 text-muted bi bi-file-earmark-x"> </i>
                  <h5 class="mt-2 mb-3 text-body">Aucun évènement accessible</h5>
                </div>
              </div>
          }
        </div>
        <!-- Card follow START -->
      </div>
      <!-- Sidenav END -->

      <!-- Main content START -->
       
