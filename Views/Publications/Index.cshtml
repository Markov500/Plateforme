                            <div class="col-11">
                              <input type="hidden" name="ContenuId" value="@item.Id">
                              <input type="hidden" name="CommentaireId" value="@null">
                              <input type="hidden" name="MembreId" value="@ViewBag.membre.Id">
                              <textarea class="form-control mb-sm-0 mb-3" name="Description" data-autoresize placeholder="Ajouter un commentaire" rows="1"></textarea>
                            </div>
                            <div class="col-1">
                              <button class="btn btn-sm btn-primary-soft " onclick="Comment('commentForm_@item.Id')"><i class="fa-solid fa-paper-plane fs-6"></i></button>
                            </div>
                          </form>
                        </div>
                        <div class="row g-3">
                            <div class="col-lg-6 mb-3">
