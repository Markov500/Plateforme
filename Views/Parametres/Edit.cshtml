@model plateforme.Models.Parametre

@{
    ViewData["Title"] = "Modification de paramètre";
    Layout = "_LayoutSuperadmin";
}


 <div class="card bg-transparent border-0">
            
            <div class="col-lg-12">
                <div class="bg-mode p-4">
                  <h1 class="h4 mb-4">Modification de @Model.Libelle</h1>
                  
                  <form asp-action="Edit">
            
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="row mb-4">
                        <div class="col-lg-6">
                            <label asp-for="Libelle" class="control-label"></label>
                        </div>
                        <div class="col-lg-6">
                            <input asp-for="Libelle" class="form-control" readonly/>
                            <span asp-validation-for="Libelle" class="text-danger"></span>
                        </div>
                    </div>

                    
                        
                        
                            @if(Model.Id != "mailPassword")
                            {
                              <div class="row mb-3">
                                <div class="col-lg-6">
                                    <label asp-for="Valeur" class="control-label"></label>
                                </div>
                                
                        
                                <div class="col-lg-6">
                                        <input asp-for="Valeur" class="form-control" />
                                        <span asp-validation-for="Valeur" class="text-danger"></span>
                                </div>
                              </div>
                            }
                            else
                            {
                                //Ancien mot de passe
                              <div class="row mb-3">
                                <div class="col-lg-6">
                                    <label  class="control-label">Entrer l'ancien mot de passe</label>
                                </div>
                                <div class="col-lg-6">
                                        <input name="ancien" class="form-control" type="password" />
                                        <span asp-validation-for="Valeur" class="text-danger"></span>
                                </div>
                              </div>
                                //Nouveau mot de passe
                              <div class="row mb-3">
                                <div class="col-lg-6">
                                    <label  class="control-label">Entrer le nouveau mot de passe</label>
                                </div>
                                <div class="col-lg-6">
                                        <input name="nouveau" class="form-control" />
                                        <span  class="text-danger">@ViewBag.erreur</span>
                                </div>
                              </div>

                                //Confirmation du mot de passe
                              <div class="row mb-3">
                                <div class="col-lg-6">
                                    <label  class="control-label">Confirmer le nouveau mot de passe</label>
                                </div>
                                <div class="col-lg-6">
                                        <input name="confirme" class="form-control" />
                                        <span class="text-danger">@ViewBag.erreur</span>
                                </div>
                              </div>
                            }
                            
                            
                        <input asp-for="Type" class="form-control" value="@Model.Type" type="hidden"/>
                        <input asp-for="Valeur" class="form-control" type="hidden"/>
                       
                         <div class="form-group col-lg-12 text-end mt-5">
                            <input type="submit" value="Enregistrer" class="btn btn-primary-soft" sstyle="width : 50px"/>
                        </div>
                    
                   
                  </form>
                </div>
                
            </div>
        </div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

