@model plateforme.Models.Parametre

@{
    ViewData["Title"] = "Modification de paramètre";
    Layout = "_LayoutSuperadmin";
}
<div class="card bg-transparent border-0">
            
            <div class="col-lg-12">
                <div class="bg-mode p-4">
                  <h1 class="h4 mb-4">Modification de @Model.Libelle</h1>
                  
                  <form asp-action="EditFile" enctype="multipart/form-data">
            
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="row mb-4">
                        <div class="col-lg-6">
                            <label asp-for="Libelle" class="control-label"></label>
                        </div>
                        <div class="col-lg-6">
                            <input asp-for="Libelle" class="form-control" readonly/>
                            <span asp-validation-for="Libelle" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-6">
                            <label asp-for="Valeur" class="control-label"></label>
                        </div>
                        <div class="col-lg-6">
                            <input asp-for="Valeur" class="form-control" type="hidden" />
                            <input  type="file" name="fichier" id="fichier" class="form-control" onchange="previewImage()"/>
                            <span asp-validation-for="Valeur" class="text-danger"></span>
                            <input asp-for="Type" class="form-control" value="@Model.Type" type="hidden"/>
                        </div>
                        <div class="col-lg-8 mx-auto">
                            <img class="card-img" id="preview" src="@Model.Valeur" alt="Impossible de privusialiser ce fichier" style="height: 30vh; width: 30vh;"> 
                        </div>
                        <div class="form-group col-lg-4 mt-5">
                            <input type="submit" value="Enregistrer" class="btn btn-primary-soft" />
                        </div>
                    </div>
                    
                  </form>
                </div>
                
            </div>
 </div>
